<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile </h1>
        <a href="/trangchu" class="btn btn-default btn-sm">Đăng xuất</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Thông tin khách hàng </h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>tên</strong>: <%= user.fullname %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>sđt</strong>: <%= user.phone %><br>
                    </p>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
    </div>
    <div class="row">

    </div>

</div>
</body>
</html>
